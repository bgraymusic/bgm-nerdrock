{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Test creating a S3 bucket from a GH Action",
  "Resources": {
    "WebAppS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "bgm-nerdrock-gh-actions-test",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        }
      }
    },
    "WebAppS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": "bgm-nerdrock-gh-actions-test",
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "AllowPublicRead",
              "Effect": "Allow",
              "Principal": {
                "AWS": "*"
              },
              "Action": [
                "s3:GetObject"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "WebAppS3Bucket"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        }
      }
    }
  }
}
